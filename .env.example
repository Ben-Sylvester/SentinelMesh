# Copy this file to .env and fill in your keys.
# NEVER commit .env to source control.

OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...
MISTRAL_API_KEY=...
GOOGLE_API_KEY=...

# Admin endpoint protection (generate with: python -c "import secrets; print(secrets.token_hex(32))")
ADMIN_API_KEY=

# Optional: Redis for distributed rate limiting (recommended for multi-worker deployments)
# REDIS_URL=redis://localhost:6379/0

# ══════════════════════════════════════════════════════════════════
# PHASE 1 FEATURES - Memory, Streaming, Visual Intelligence
# ══════════════════════════════════════════════════════════════════

# Memory System
ENABLE_MEMORY=true
MEMORY_STORAGE_PATH=data/memory

# Streaming
ENABLE_STREAMING=true

# Visual Intelligence
ENABLE_VISION=true
DEFAULT_VISION_QUALITY=balanced  # cheap, balanced, accurate
DEFAULT_IMAGE_GEN_MODEL=dall-e-3 # dall-e-3, stable-diffusion-xl

# OCR Provider (if using cloud OCR)
# AZURE_OCR_KEY=
# GOOGLE_VISION_KEY=

# ══════════════════════════════════════════════════════════════════
# PHASE 2 FEATURES - Cache, Functions, Prompt Library
# ══════════════════════════════════════════════════════════════════

# Semantic Cache
ENABLE_CACHE=true
CACHE_SIMILARITY_THRESHOLD=0.95
CACHE_DEFAULT_TTL=3600  # 1 hour

# Function Calling
ENABLE_FUNCTIONS=true

# Prompt Library
ENABLE_PROMPT_LIBRARY=true
PROMPT_LIBRARY_PATH=data/prompts

# ══════════════════════════════════════════════════════════════════
# PHASE 3 & 4 FEATURES - Workflows, Integrations, Guardrails
# ══════════════════════════════════════════════════════════════════

# Workflow Engine
ENABLE_WORKFLOWS=true

# Integrations
ENABLE_INTEGRATIONS=true

# Guardrails
ENABLE_GUARDRAILS=true
AUTO_REDACT_PII=true
BLOCK_UNSAFE_CONTENT=true
MIN_SAFETY_SCORE=0.7
